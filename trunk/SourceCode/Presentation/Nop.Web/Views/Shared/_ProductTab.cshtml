@using Nop.Services.GiaHelper
@{
    Layout = null;    
}
<div id="tab-header">
    <div class="tab1 tab tab-active" style="cursor: pointer" onclick="tab_click(1,3)">
        <div class="title">best sellers</div>
    </div>
    <div class="tab2 tab" style="cursor: pointer" onclick="tab_click(2,3)">
        <div class="title">clearance</div>
    </div>
    <div class="tab3 tab" style="cursor: pointer" onclick="tab_click(3,3)">
        <div class="title">new arrivals</div>
    </div>
    <div class="clear-fix"></div>
</div>
<div id="tab-content">
    <div class="tab1 tab tab-active">
        @Html.Action("HomepageBestSellers", "Catalog")
        <div class="clear-fix"></div>
    </div>
    <div class="tab2 tab">
        @Html.Action("Gia_Clearances", "Catalog")
        <div class="clear-fix"></div>
    </div>
    <div class="tab3 tab">
        @Html.Action("Gia_SpecialAttributes", "Catalog", new { attributeName = GiaConstance.NewArrivalsKey })
        <div class="clear-fix"></div>
    </div>
    <div class="clear-fix"></div>
</div>
<script type="text/javascript">
    function tab_click(index, total) {
        for (var i = 1; i <= total; i++) {
            $("#tab-header .tab" + i).removeClass("tab-active");
            $("#tab-content .tab" + i).removeClass("tab-active");
        }
        $("#tab-header .tab" + index).addClass("tab-active");
        $("#tab-content .tab" + index).addClass("tab-active");
    }
</script>
