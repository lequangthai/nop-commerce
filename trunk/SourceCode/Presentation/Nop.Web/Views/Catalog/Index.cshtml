@using System.Configuration
@using Nop.Services.GiaHelper
@model Nop.Web.Models.Catalog.CatalogIndexModel
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";
}
@if (Model != null)
{
    ViewBag.CurrentCategoryName = Model.catName;
    ViewBag.CurrentCategoryId = Model.isHomePage ? null : ConfigurationManager.AppSettings[Model.catName];
    ViewBag.CurrentPageIndex = Model.pageIndex;
    ViewBag.PageItems = Model.pageItems;

    if (Model.catType == GiaConstance.NewArrivalsKey.ToLower())
    {
        ViewBag.LetterBoxTitle = "new arrivals";
        ViewBag.CatTitle = "new arrivals";
        ViewBag.CurrentTab = 3;
    }
    else if (Model.catType == GiaConstance.ClearanceKey.ToLower())
    {
        ViewBag.LetterBoxTitle = "Clearance";
        ViewBag.CatTitle = "Clearance";
        ViewBag.CurrentTab = 2;
    }
    else
    {
        ViewBag.LetterBoxTitle = "Best Sellers";
        ViewBag.CatTitle = "Best Sellers";
        ViewBag.CurrentTab = 1;
    }
}

<input type="hidden" id="catName" value="@Model.catName"/>
<script type="text/javascript">
    var name = "@Model.catName.ToLower()";
    setCatActive(name);
</script>

@section Define_HomePage_HeaderBanner{
    @if (Model.isHomePage)
    {
        @Html.Partial("HeaderBanner")
    }
}
@section HomePage_TopNavigation{
    @if (Model.isHomePage)
    {
        @Html.Partial("_GiaTopNavigation")
    }
}
@section Category_LetterBox
{
    @if (!Model.isHomePage)
    {
        @Html.Partial("_Category.LetterBox")
    }
}
@if (!Model.isHomePage)
{
    @Html.Partial("_Category.Head")
}
@Html.Partial("_ProductTab")
