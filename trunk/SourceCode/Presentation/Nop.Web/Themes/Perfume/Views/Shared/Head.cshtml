@using Nop.Core;
@using Nop.Core.Infrastructure;
@{
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;
}
@if (supportRtl)
{
    //this theme supports RTL
    Html.AppendCssFileParts(Url.Content("~/Themes/Perfume/Content/styles.rtl.css"));
}
else
{
    Html.AppendCssFileParts(Url.Content("~/Themes/Perfume/Content/styles.css"));
}
