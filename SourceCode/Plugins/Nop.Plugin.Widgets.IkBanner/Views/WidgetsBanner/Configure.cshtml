@{
    Layout = "";
}
@model Nop.Plugin.Widgets.IkBanner.Models.BannerInfoModel
@using Nop.Core.Infrastructure;
@using Nop.Web.Framework;
@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

    <div id="ikbanner-configure">
        <ul>
            <li @Html.RenderSelectedTabIndex(0, GetSelectedTabIndex())>
                @T("Plugins.Widgets.IkBanner.General")
            </li>
            <li @Html.RenderSelectedTabIndex(1, GetSelectedTabIndex())>
                @T("Plugins.Widgets.IkBanner.Placement")
            </li>
        </ul>
        <div>
            @TabGeneral()
        </div>
        <div>
            @TabOverride()
        </div>
    </div>
    <script>
        $(document).ready(function() {
            $("#ikbanner-configure").kendoTabStrip({
                animation: {
                    open: {
                        effects: "fadeIn"
                    }
                },
                select: tabstrip_on_tab_select
            });
        });
    </script>


@helper TabGeneral()
{
using (Html.BeginForm(null, null, FormMethod.Post, new { id = "widget-banner-form" }))
{
    var defaultGridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;
    <table class="adminContent">
        <tr>
            <td>
                <div id="widget-banner-grid"></div>

                <script>
                    $(document).ready(function () {
                        $("#widget-banner-grid").kendoGrid({
                            dataSource: {
                                type: "json",
                                transport: {
                                    read: {
                                        url: "@Html.Raw(Url.Action("BannerList", "WidgetsIkBanner", new RouteValueDictionary() { { "Namespaces", "Nop.Plugin.Widgets.IkBanner.Controllers" }, { "area", "" } }))",
                                        type: "POST",
                                        dataType: "json"
                                    },
                                    destroy: {
                                        url: "@Html.Raw(Url.Action("BannerDelete", "WidgetsIkBanner", new RouteValueDictionary() { { "Namespaces", "Nop.Plugin.Widgets.IkBanner.Controllers" }, { "area", "" } }))",
                                        type: "POST",
                                        dataType: "json"
                                    }
                                },
                                schema: {
                                    data: "Data",
                                    total: "Total",
                                    errors: "Errors",
                                    model: {
                                        id: "Id"
                                    }
                                },
                                requestEnd: function (e) {
                                    if (e.type == "update") {
                                        this.read();
                                    }
                                },
                                error: function (e) {
                                    display_kendoui_grid_error(e);
                                    // Cancel the changes
                                    this.cancelChanges();
                                },
                                pageSize: @(defaultGridPageSize),
                                serverPaging: true,
                                serverFiltering: true,
                                serverSorting: true
                            },
                            pageable: {
                                refresh: true,
                                pageSizes: [@(gridPageSizes)]
                            },
                            editable: {
                                confirmation: false,
                                mode: "inline"
                            },
                            scrollable: false,
                            columns: [{
                                field: "BannerHtml",
                                title: "@T("Plugins.Widgets.IkBanner.Fields.Html")",
                                width: 300,
                                encoded: false
                            }, {
                                field: "Id",
                                title: "@T("Admin.Common.Edit")",
                                width: 100,
                                template: "<input type='submit' value='@T("Admin.Common.Edit")' onclick=\"javascript:OpenWindow('@Url.RouteUrl("Plugin.Widgets.IkBanner.EditPopup")?id=#=Id#&btnId=btnRefreshBanners&formId=widget-banner-form', 800, 400, true); return false;\" class='k-button' />"
                            },  {
                                command: { name: "destroy", text: "@T("Admin.Common.Delete")" },
                                title: "@T("Admin.Common.Delete")",
                                width: 100
                            }]
                        });
                    });
                </script>
            </td>
        </tr>
    </table>
    <table class="adminContent">
        <tr>
            <td>
                @{
    var addNewUrl = Url.RouteUrl("Plugin.Widgets.IkBanner.AddPopup") + "?btnId=btnRefreshBanners&formId=widget-banner-form";
                }
                <br />
                <input type="submit" id="btnAddNewOption" name="btnAddNewOption" value="@T("Plugins.Widgets.IkBanner.AddRecord")" onclick="javascript:OpenWindow('@(addNewUrl)', 800, 450, true); return false;" class="k-button" />
                <input type="submit" id="btnRefreshBanners" name="btnRefreshBanners" style="display: none" />
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#btnRefreshBanners').click(function () {
                            //refresh grid
                            $('#widget-banner-grid').data('kendoGrid').dataSource.read();
                            $('#widget-banner-grid').data('kendoGrid').refresh();
                            //return false to don't reload a page
                            return false;
                        });
                    });
                </script>
            </td>
        </tr>
    </table>
    
}
}
