@{
    Layout = "";
}
@model Nop.Plugin.Widgets.IkBanner.Models.BannerModel
@using Nop.Web.Framework;
@using Nop.Core.Html;
@if (!Model.IsStatic)
{ 
<div class="slide-banner-container banner-container">
    <div class="slide-inner">
        <ul class="slides">               
            @foreach (var banner in Model.AvailableBanners)
                {
                <li>
                    <div class="slide-banner">                           
                    @Html.Raw(banner.BannerHtml)
                    </div>
                </li>
                }
        </ul>
    </div>
</div>
}
else
{
    <div class="banner-container">
        @foreach (var banner in Model.AvailableBanners)
        {
        @Html.Raw(banner.BannerHtml)
        }
    </div>
}
<script>
    $('.banner-container img').addClass('img-responsive');
</script>